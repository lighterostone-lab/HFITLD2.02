{
    "type": "group",
    "id": "_saveAppMainScreen",
    "animations": ["field:opacity;delay:0.25;duration:0.4;keyframes:0=0,100=255"],
    "bindings": {
        "size": {
            "width": "@PKD_PhoneMenu.Utils.screenSize().w",
            "height": "@PKD_PhoneMenu.Utils.screenSize().h"
        }
    },
    "childrens": [
        {
            "type": "text",
            "parameters": {
                "alignment": "center",
                "font": {
                    "face": null,
                    "size": 18,
                    "italic": false,
                    "bold": false,
                    "weight": 0
                },
                "margins": { "x": 0, "y": 0 },
                "outline": { "color": "#000000", "width": 2 },
                "textColor": "#ccc",
                "multiline": false,
                "verticalCentered": true,
                "actualSize": false
            },
            "effects": ["shadow"],
            "bindings": {
                "size": { "width": "100%", "height": "40hdp"},
                "text": "Which file would you like to load?",
                "fontSize": "16hdp"
            }
        },
        {
            "type": "list",
            "id": "_filesList",
            "bindings": {
                "position": { "x": "center", "y": "40hdp" },
                "size": {
                    "width": "98%",
                    "height": "100% - 90hdp"
                }
            }
        }
    ]
}